{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "${workspaceFolder}/main.cpp",
          "-o", "${workspaceFolder}/main",
          "-I/usr/include/opencv4",      // OpenCV 헤더 경로
          "-L/usr/lib",                 // OpenCV 라이브러리 경로
          "-lopencv_core",
          "-lopencv_imgcodecs",
          "-lopencv_highgui"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated by VS Code"
      }
    ]
  }
  